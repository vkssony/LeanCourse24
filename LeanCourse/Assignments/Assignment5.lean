lemma disjoint_unions {Œπ Œ± : Type*} [LinearOrder Œπ] [wf : WellFoundedLT Œπ] (A C : Œπ ‚Üí Set Œ±)
  (hC : ‚àÄ i, C i = A i \ ‚ãÉ j < i, A j) : Pairwise (Disjoint on C) ‚àß ‚ãÉ i, C i = ‚ãÉ i, A i := by {
  have h := wf.wf.has_min -- this hypothesis allows you to use well-orderedness
  constructor
  ¬∑ unfold Pairwise
    intro i j hij
    have h1 : C i ‚à© C j = ‚àÖ := by {
      have hCi : C i ‚äÜ A i := by {
        calc C i = A i \ ‚ãÉ j < i, A j := by apply hC
                _ ‚äÜ A i := by exact diff_subset
      }
      have hCj : C j ‚äÜ A j := by {
        calc C j = A j \ ‚ãÉ k < j, A k := by apply hC
                _ ‚äÜ A j := by exact diff_subset
      }
      calc C i ‚à© C j  = (A i \ ‚ãÉ k < i, A k) ‚à© (A j \ ‚ãÉ k < j, A k) := by rw [hC, hC]



    }
    exact Set.disjoint_iff_inter_eq_empty.mpr h1
  ¬∑ ext x
    constructor
    ¬∑ intro h1
      apply mem_iUnion.1 at h1
      have h2 : ‚àÄ i, x ‚àà C i ‚Üí x ‚àà A i := by {
        intro i hCi
        rw [hC i] at hCi
        exact mem_of_mem_diff hCi
